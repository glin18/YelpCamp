<% layout('layouts/boilerplate') -%>
    <h1>Account Info</h1>
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="https://image.made-in-china.com/2f0j00eClGPHagJycY/Reversible-Octopus-Plush-Colorful-All-Kinds-Available-Soft-Kids-Funny-OEM-Toy.jpg"
                    class="img-fluid rounded-start" alt="..." style="width: 15rem">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        Username: <%=user.username%>
                    </h5>
                    <h5>Email: <%=user.email%>
                    </h5>
                    <p class="card-text">No Description</p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
        </div>
    </div>
    <form action="http://localhost:3000/users/account/logout" method="post">
        <button type="submit" class="btn btn-primary">Log out</button>
    </form>